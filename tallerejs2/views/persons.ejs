<%- include('template/cabecera', {tituloWeb: 'Persons' }) %>
<body style="background-color: #d29494;">
    <div class="container">
        <figure class="text-center">
            <blockquote class="blockquote">
                <h1 style="color: #858a90;">Persons</h1>
            </blockquote>
        </figure>
        <% if (filteredPersons && filteredPersons.length > 0) { %>
            <h2>Filtrado de Personas</h2>
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered shadow "> 
                    <thead>
                        <tr class="table-info">
                            <th scope="col">Nombre</th>
                            <th scope="col">Edad</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        <% filteredPersons.forEach(person => { %>
                            <tr>
                                <td><%= person.name %></td>
                                <td><%= person.age %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <h2>All Persons</h2>
            <pre><%= JSON.stringify(persons, null, 2) %></pre>
        <% } %>

        <!-- Formulario para filtrar -->
        <form action="/persons" method="GET" class="filter-form">
            <label for="minAge">Filtrar por edad mínima (en días):</label>
            <input type="number" id="minAge" name="minAge" value="<%= minAge %>" required class="filter-input">
            <button type="submit" class="filter-button">Filtrar</button>
        </form>
        
    </div>
</body>
</html>



